<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">#FF000000</item>
    </style>

    <style name="BlueButton" parent="AppTheme">
        <item name="android:colorButtonNormal">@color/primary_dark</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="PinkButton" parent="AppTheme">
        <item name="android:colorButtonNormal">@color/highlight</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

</resources>
